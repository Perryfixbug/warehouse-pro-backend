<aside class="fixed top-12 left-0 w-60 h-[calc(100vh-3rem)] bg-white border-r border-gray-200 flex flex-col py-6 text-gray-700 overflow-y-auto">
  <nav class="flex flex-col space-y-2">
    <div
      class="px-6 py-2 font-semibold text-gray-600 uppercase tracking-wider 
             rounded-r-full w-full text-left"
    >MENU</div>

    <!-- Tổng quan -->
    <%= link_to root_path, class: "flex items-center px-6 py-2 hover:bg-blue-50 hover:text-blue-600 transition rounded-r-full" do %>
      <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
              d="M3 12l2-2m0 0l7-7 7 7m-9 2v8m4-8v8m-9 0h14" />
      </svg>
      Home
    <% end %>

    <%= link_to stat_path, class: "flex items-center px-6 py-2 hover:bg-blue-50 hover:text-blue-600 transition rounded-r-full" do %>
      <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
              d="M3 17l6-6 4 4 8-8" />
      </svg>
      Thống kê
    <% end %>

    <!-- QUẢN LÝ KHO -->
    <div data-controller="dropdown">
      <%# Nút bấm %>
      <button 
        data-action="click->dropdown#toggle"
        class="px-6 py-2 font-semibold text-gray-600 tracking-wider 
            hover:bg-blue-50 hover:text-blue-600 transition rounded-r-full w-full text-left
              flex items-center gap-2"
      >
        <svg data-dropdown-target="icon"
            class="w-4 h-4 transition-transform duration-200"
            fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                d="M19 9l-7 7-7-7" />
        </svg>
        Quản lý kho</button>
      <%# Menu %>
      <div data-dropdown-target="menu" class="hidden menu">
        <%= link_to products_path, class: "flex items-center px-6 py-2 hover:bg-blue-50 hover:text-blue-600 transition rounded-r-full" do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                  d="M20 7l-8-4-8 4m16 0v10l-8 4-8-4V7m16 0L12 11 4 7" />
          </svg>
          Sản phẩm
        <% end %>
      </div>
    </div>

    <!-- QUẢN LÝ ĐƠN -->
    <div data-controller="dropdown">
      <button 
        data-action="click->dropdown#toggle"
        class="px-6 py-2 font-semibold text-gray-600 tracking-wider 
            hover:bg-blue-50 hover:text-blue-600 transition rounded-r-full w-full text-left
              flex items-center gap-2"
      >
        <svg data-dropdown-target="icon"
            class="w-4 h-4 transition-transform duration-200"
            fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                d="M19 9l-7 7-7-7" />
        </svg>
        Quản lý đơn
      </button>
      <%# Menu %>
      <div data-dropdown-target="menu" class="hidden menu">
        <%= link_to import_orders_path, class: "flex items-center px-6 py-2 hover:bg-blue-50 hover:text-green-600 transition rounded-r-full" do %>
          <!-- Icon nhập kho -->
          <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                  d="M4 4v16h16V8l-6-4H4zM12 12v4m0 0l-2-2m2 2l2-2" />
          </svg>
          Đơn nhập
        <% end %>

        <%= link_to export_orders_path, class: "flex items-center px-6 py-2 hover:bg-blue-50 hover:text-orange-600 transition rounded-r-full" do %>
          <!-- Icon xuất kho -->
          <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                  d="M4 20V8l6-4h10v16H4zM12 12v-4m0 0l-2 2m2-2l2 2" />
          </svg>
          Đơn xuất
        <% end %>

        <%= link_to orders_path, class: "flex items-center px-6 py-2 hover:bg-blue-50 hover:text-blue-600 transition rounded-r-full" do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                  d="M17 9V7a2 2 0 00-2-2H9a2 2 0 00-2 2v2M5 13h14l1 9H4l1-9z" />
          </svg>
          Tất cả
        <% end %>
      </div>
    </div>
    <!-- QUẢN LÝ ĐỐI TÁC -->
    <div data-controller="dropdown">
      <button 
        data-action="click->dropdown#toggle"
        class="px-6 py-2 font-semibold text-gray-600 tracking-wider 
            hover:bg-blue-50 hover:text-blue-600 transition rounded-r-full w-full text-left
              flex items-center gap-2"
      >
        <svg data-dropdown-target="icon"
            class="w-4 h-4 transition-transform duration-200"
            fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                d="M19 9l-7 7-7-7" />
        </svg>
        Bên thứ 3
      </button>
      <div data-dropdown-target="menu" class="hidden menu">
        <%= link_to agencies_path, class: "flex items-center px-6 py-2 hover:bg-blue-50 hover:text-blue-600 transition rounded-r-full" do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                  d="M5.121 17.804A9 9 0 1118.364 4.56M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
          </svg>
          Đối tác
        <% end %>
      </div>
    </div>

    <!-- NHÂN SỰ -->
    <div data-controller="dropdown">
      <%# Nút bấm %>
      <button 
        data-action="click->dropdown#toggle"
        class="px-6 py-2 font-semibold text-gray-600 tracking-wider 
            hover:bg-blue-50 hover:text-blue-600 transition rounded-r-full w-full text-left
              flex items-center gap-2"
      >
        <svg data-dropdown-target="icon"
            class="w-4 h-4 transition-transform duration-200"
            fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                d="M19 9l-7 7-7-7" />
        </svg>
        Nhân sự
      </button>
      <%# Menu %>
      <div data-dropdown-target="menu" class="hidden menu">
        <%= link_to users_path, class: "flex items-center px-6 py-2 hover:bg-blue-50 hover:text-blue-600 transition rounded-r-full" do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                  d="M5.121 17.804A9 9 0 1118.364 4.56M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
          </svg>
          Nhân viên
        <% end %>
      </div>
    </div>

    <!-- HỆ THỐNG -->
    <%= link_to about_path, class: "flex items-center px-6 py-2 hover:bg-blue-50 hover:text-blue-600 transition rounded-r-full" do %>
      <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
              d="M13 16h-1v-4h-1m1-4h.01M12 18h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
      </svg>
      About 
    <% end %>

    <%= link_to help_path, class: "flex items-center px-6 py-2 hover:bg-blue-50 hover:text-blue-600 transition rounded-r-full" do %>
      <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
              d="M8 10h.01M12 10h.01M16 10h.01M21 16a9 9 0 11-18 0 9 9 0 0118 0z" />
      </svg>
      Hỗ trợ
    <% end %>
  </nav>
</aside>

<style>
nav .menu{
  margin-left: 20px;
}
</style>