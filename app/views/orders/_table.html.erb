<table class="min-w-full border border-gray-300 rounded-md text-sm">
  <thead class="bg-gray-100">
    <tr>
      <th class="p-2 border">Mã đơn</th>
      <th class="p-2 border">Đại lý</th>
      <th class="p-2 border">Người tạo</th>
      <th class="p-2 border">Ngày tạo</th>
      <th class="p-2 border text-right">Tổng giá trị</th>
      <th class="p-2 border text-center">Hành động</th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
      <tr class="hover:bg-gray-50">
        <td class="p-2 border"><%= order.id %></td>
        <td class="p-2 border"><%= order.agency&.name %></td>
        <td class="p-2 border"><%= order.user&.fullname %></td>
        <td class="p-2 border"><%= l(order.created_at, format: :short) %></td>
        <td class="p-2 border text-right font-medium text-green-700">
          <%= number_to_currency(order.total_price, unit: "₫", precision: 0) %>
        </td>
        <td class="p-2 border text-center">
          <%= link_to "Xem chi tiết", order_path(order),
                      class: "text-blue-700 px-3 py-1 rounded-md text-sm hover:underline" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<!-- Pagination -->
<div class="mt-4">
  <%= will_paginate @orders, renderer: TailwindPaginationHelper::LinkRenderer %>
</div> 